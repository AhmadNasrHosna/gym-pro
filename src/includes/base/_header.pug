header.site-header
  .container
    .site-header__inner
      .site-header__left
        .site-header__logo
          h1.no-m-block
            a(href="#") good gym.
      .site-header__middle
        .site-header__search-nav
          form.search-nav__form(action="")
            label(for="headerSearchInput" class="visually-hidden")
            input(type="search" id="headerSearchInput" placeholder="Search about any thing!")
            button(type="submit", class="button--plain")
              span.visually-hidden Search
              svg(width='23', height='23', viewBox='0 0 24 24')
                use(xlink:href='#search')

      .site-header__right
        nav.site-header__menu-nav
          ul.list.list--inline.list--no-bullets.list--pipe-separator
            li
              a(href="#", class="active-page ") Home
            li
              a(href="#") Directory
            li
              a(href="#") Newsfeed
              
        .site-header__user-nav
          button.user-nav__drawer-toggle.user-nav__avatar.button--plain
            a(href="#")
              .avatar
                img(src="assets/images/user-avatar.jpg", width="34px", height="34px" alt="User Avatar")
                .user-nav__avatar__icon
                  svg(width='7', height='7', viewBox='0 0 100 100', transform="rotate(-90)")
                    use(xlink:href='#chevron-down-bold')
              h5.user-nav__username.no-m-bottom Ahmed Nasr
          .user-nav__drawer
              ul.setting-nav__drawer__menu.list.list--no-bullets
                li
                  a(href="#") Show Profile 
                li
                  a(href="#") Setting
        .site-header__setting-nav
          button.setting-nav__drawer-toggle.button--plain
            div.visually-hidden Setting Menu
            span
          .setting-nav__drawer
            ul.setting-nav__drawer__menu.list.list--no-bullets
              li
                a(href="#") Contact 
              li
                a(href="#") About Us
              li
                a(href="#") Privacy Policy
        .site-header__notuser-components
          button.button.button--primary
            | Get Started

      