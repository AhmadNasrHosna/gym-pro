    .site-footer__newsletter.clearfix
      h3.pull-start Subscribe to our newsletter
      form.site-footer__newsletter__form.pull-end
        input(type="email", placeholder="Email address goes here")
        button(type="submit" class="button--plain")
          svg(width="19", height="19", viewBox='0 0 512.002 512.002')
            use(xlink:href="#arrow-right")
    hr.site-footer__divider
    .site-footer__navbar.clearfix
      .site-footer__logo.pull-start
        .carnivale-logo
          img(src="assets/images/car-logo-w.png", alt="Carnivale logo")
      nav.pull-end
        ul.list.list--inline-atSmall.list--no-bullets
          li
            a(href="#", class="to-uppercase") Home
          li
            a(href="#", class="to-uppercase") Products
          li
            a(href="#", class="to-uppercase") Stories
          li
            a(href="#", class="to-uppercase") Contatct
    hr.site-footer__divider
    .site-footer__copy.clearfix
      span.pull-start Copyright Â© Carnivale 2019
      .sponsor.pull-end
        span A story by
        .cloud-icon
          span

