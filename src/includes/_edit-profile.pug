main.site-content
  .edit-profile
    .container.container--narrow
      h2 Edit profile
      form.edit-profile__form.block(action="")
        .form-control.block
          label(for="firstName") First Name
          input(type="text", id="firstName" placeholder="Your first name")
        .form-control.block
          label(for="lastName") Last Name
          input(type="text", id="lastName" placeholder="Your last name")
        .form-control.block
          label(for="password") Password
          input(type="password", id="password" placeholder="Your password here")
        .form-control.block
          label(for="emailAddress") Email Address
          input(type="email", id="emailAddress" placeholder="Your email address")          
        .form-control.block
          label(for="city") City
          input(type="text", id="city" placeholder="Your city")
        .form-control.block
          label(for="address") Address
          input(type="text", id="address" placeholder="Your address")
        .form-control.block
          label(for="favQuote") Favorite Quote
          textarea(id="favQuote" placeholder="Your favourite quote", style="resize: vertical")
        .form-control.block
